---
interface Props {
  variant?: "monogram" | "face" | "minimal";
  size?: number;
  class?: string;
}

const { variant = "monogram", size = 40, class: className = "" } = Astro.props;
---

{variant === "monogram" && (
  <!-- DB Monogram - D and B sharing a spine, creates abstract face-like form -->
  <svg
    width={size}
    height={size}
    viewBox="0 0 100 100"
    fill="none"
    class={className}
    xmlns="http://www.w3.org/2000/svg"
  >
    <!-- Shared vertical spine -->
    <line x1="50" y1="15" x2="50" y2="85" stroke="currentColor" stroke-width="6" stroke-linecap="round" />

    <!-- D curve (left side, mirrored) - forms left "eye" area -->
    <path
      d="M 50 15 Q 15 15, 15 50 Q 15 85, 50 85"
      stroke="currentColor"
      stroke-width="6"
      fill="none"
      stroke-linecap="round"
    />

    <!-- B curves (right side) - two bumps form right features -->
    <path
      d="M 50 15 Q 80 15, 80 37.5 Q 80 50, 50 50"
      stroke="currentColor"
      stroke-width="6"
      fill="none"
      stroke-linecap="round"
    />
    <path
      d="M 50 50 Q 85 50, 85 67.5 Q 85 85, 50 85"
      stroke="currentColor"
      stroke-width="6"
      fill="none"
      stroke-linecap="round"
    />
  </svg>
)}

{variant === "face" && (
  <!-- Face interpretation - D's form head, B bumps form eyes -->
  <svg
    width={size}
    height={size}
    viewBox="0 0 100 100"
    fill="none"
    class={className}
    xmlns="http://www.w3.org/2000/svg"
  >
    <!-- Head outline using mirrored D's -->
    <path
      d="M 50 10 Q 90 10, 90 50 Q 90 90, 50 90 Q 10 90, 10 50 Q 10 10, 50 10"
      stroke="currentColor"
      stroke-width="5"
      fill="none"
    />

    <!-- Left eye (small D rotated) -->
    <path
      d="M 30 40 Q 40 35, 40 45 Q 40 55, 30 50 Z"
      fill="currentColor"
      opacity="0.8"
    />

    <!-- Right eye (small B bump) -->
    <path
      d="M 70 40 Q 60 35, 60 45 Q 60 55, 70 50 Z"
      fill="currentColor"
      opacity="0.8"
    />

    <!-- Subtle smile using B's bottom curve concept -->
    <path
      d="M 35 65 Q 50 75, 65 65"
      stroke="currentColor"
      stroke-width="4"
      fill="none"
      stroke-linecap="round"
    />
  </svg>
)}

{variant === "minimal" && (
  <!-- Minimal - just the essential DB ligature -->
  <svg
    width={size}
    height={size * 0.6}
    viewBox="0 0 100 60"
    fill="none"
    class={className}
    xmlns="http://www.w3.org/2000/svg"
  >
    <!-- D -->
    <path
      d="M 10 5 L 10 55 M 10 5 Q 45 5, 45 30 Q 45 55, 10 55"
      stroke="currentColor"
      stroke-width="6"
      fill="none"
      stroke-linecap="round"
      stroke-linejoin="round"
    />

    <!-- B -->
    <path
      d="M 55 5 L 55 55 M 55 5 Q 85 5, 85 17.5 Q 85 30, 55 30 M 55 30 Q 90 30, 90 42.5 Q 90 55, 55 55"
      stroke="currentColor"
      stroke-width="6"
      fill="none"
      stroke-linecap="round"
      stroke-linejoin="round"
    />
  </svg>
)}
