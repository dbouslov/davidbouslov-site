---
import Layout from '../layouts/Layout.astro';
import ParticleBackground from '../components/ParticleBackground.astro';

// Only actual published work
const publications = [
  {
    title: "An Early Pipeline Framework for Assessing Vendor AI Solutions to Support Return on Investment",
    venue: "NPJ Digital Medicine",
    year: "2025",
  },
  {
    title: "Glucagon and Insulin Cross Talk Regulates Hepatic Glycogen Metabolism",
    venue: "Diabetes",
    year: "2024",
  },
  {
    title: "β Cell Gαs Signaling and Glucose Homeostasis",
    venue: "Journal of Clinical Investigation",
    year: "2025",
  },
];

// Theme tags for research (general areas, no specifics)
const researchThemes = ["Health Economics", "AI Governance", "Cost-Effectiveness", "Clinical AI"];

// Theme tags for projects (general areas, no specifics)
const projectThemes = ["Healthcare Tools", "Education Tech", "Automation", "Data Analysis"];
---

<Layout title="David Bouslov">
  <ParticleBackground />

  <!-- Navigation -->
  <nav class="fixed top-0 left-0 right-0 z-50 px-6 py-4 backdrop-blur-sm bg-black/20">
    <div class="max-w-4xl mx-auto flex items-center justify-between">
      <a href="#" class="text-lg font-semibold text-grayblue-100 hover:text-white transition-colors">
        DB
      </a>
      <div class="flex items-center gap-6 text-sm">
        <a href="#about" class="text-grayblue-400 hover:text-grayblue-100 transition-colors">About</a>
        <a href="#work" class="text-grayblue-400 hover:text-grayblue-100 transition-colors">Work</a>
        <a href="#publications" class="text-grayblue-400 hover:text-grayblue-100 transition-colors">Publications</a>
      </div>
    </div>
  </nav>

  <main class="relative z-10">
    <!-- Hero Section -->
    <section class="min-h-screen flex items-center justify-center px-6">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-5xl md:text-7xl font-bold tracking-tight">
          <span class="text-grayblue-100">David</span>
          <span class="text-grayblue-500"> Bouslov</span>
        </h1>
        <p class="mt-6 text-xl md:text-2xl text-grayblue-400 font-light">
          Medical Student · Researcher · Builder
        </p>
        <p class="mt-4 text-grayblue-500 max-w-lg mx-auto">
          Building at the intersection of medicine, AI, and health economics.
        </p>
        <div class="mt-8 flex items-center justify-center gap-4">
          <a
            href="#work"
            class="px-6 py-3 bg-grayblue-600 hover:bg-grayblue-500 text-white rounded-lg font-medium transition-colors"
          >
            View Work
          </a>
          <a
            href="https://github.com/dbouslov"
            target="_blank"
            rel="noopener noreferrer"
            class="px-6 py-3 border border-grayblue-600 hover:border-grayblue-400 text-grayblue-300 hover:text-grayblue-100 rounded-lg font-medium transition-colors"
          >
            GitHub
          </a>
        </div>

        <!-- Scroll indicator -->
        <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
          <svg class="w-6 h-6 text-grayblue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
          </svg>
        </div>
      </div>
    </section>

    <!-- About Section -->
    <section id="about" class="py-24 px-6">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl font-bold text-grayblue-100 mb-8">About</h2>
        <div class="grid md:grid-cols-2 gap-8">
          <div class="space-y-4 text-grayblue-300 leading-relaxed">
            <p>
              I'm a second-year medical student at Hackensack Meridian School of Medicine
              interested in surgery and leveraging technology to improve healthcare.
            </p>
            <p>
              I build tools that solve problems I encounter in medical education and research—from
              study optimization systems to cost-effectiveness analysis frameworks.
            </p>
          </div>
          <div class="space-y-4">
            <div class="p-4 rounded-lg bg-white/[0.03] border border-white/[0.06]">
              <h3 class="text-sm font-semibold text-grayblue-400 uppercase tracking-wider mb-3">Education</h3>
              <div class="space-y-2">
                <p class="text-grayblue-200">Hackensack Meridian School of Medicine</p>
                <p class="text-sm text-grayblue-500">M.D. Candidate, Class of 2027</p>
              </div>
              <div class="mt-4 space-y-2">
                <p class="text-grayblue-200">University of North Carolina at Chapel Hill</p>
                <p class="text-sm text-grayblue-500">B.S. Biology, Chemistry Minor · Phi Beta Kappa</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Work Section - Visual Stats -->
    <section id="work" class="py-24 px-6 bg-white/[0.01]">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl font-bold text-grayblue-100 mb-12">Work</h2>

        <div class="grid md:grid-cols-2 gap-8">
          <!-- Research Card -->
          <div class="p-8 rounded-2xl bg-gradient-to-br from-grayblue-900/50 to-grayblue-800/30 border border-grayblue-700/30 hover:border-grayblue-600/50 transition-all duration-300">
            <div class="flex items-center gap-4 mb-6">
              <div class="w-16 h-16 rounded-xl bg-grayblue-600/20 flex items-center justify-center">
                <span class="text-3xl font-bold text-grayblue-400">5+</span>
              </div>
              <div>
                <h3 class="text-xl font-semibold text-grayblue-100">Research Projects</h3>
                <p class="text-sm text-grayblue-500">Active investigations</p>
              </div>
            </div>
            <div class="flex flex-wrap gap-2">
              {researchThemes.map((theme) => (
                <span class="px-3 py-1.5 text-sm rounded-full bg-grayblue-700/40 text-grayblue-300 border border-grayblue-600/30">
                  {theme}
                </span>
              ))}
            </div>
          </div>

          <!-- Projects Card -->
          <div class="p-8 rounded-2xl bg-gradient-to-br from-grayblue-900/50 to-grayblue-800/30 border border-grayblue-700/30 hover:border-grayblue-600/50 transition-all duration-300">
            <div class="flex items-center gap-4 mb-6">
              <div class="w-16 h-16 rounded-xl bg-grayblue-600/20 flex items-center justify-center">
                <span class="text-3xl font-bold text-grayblue-400">4+</span>
              </div>
              <div>
                <h3 class="text-xl font-semibold text-grayblue-100">Side Projects</h3>
                <p class="text-sm text-grayblue-500">Tools & applications</p>
              </div>
            </div>
            <div class="flex flex-wrap gap-2">
              {projectThemes.map((theme) => (
                <span class="px-3 py-1.5 text-sm rounded-full bg-grayblue-700/40 text-grayblue-300 border border-grayblue-600/30">
                  {theme}
                </span>
              ))}
            </div>
          </div>
        </div>

        <!-- Interests Bar -->
        <div class="mt-12 p-6 rounded-xl bg-white/[0.02] border border-white/[0.05]">
          <h3 class="text-sm font-semibold text-grayblue-400 uppercase tracking-wider mb-4">Areas of Interest</h3>
          <div class="flex flex-wrap gap-3">
            {["Surgery", "Health Economics", "AI in Healthcare", "Cost-Effectiveness Analysis", "Clinical Decision Support"].map((interest) => (
              <span class="px-4 py-2 text-sm rounded-lg bg-grayblue-800/30 text-grayblue-200 border border-grayblue-700/20 hover:border-grayblue-600/40 transition-colors">
                {interest}
              </span>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Publications Section - Only Real/Published -->
    <section id="publications" class="py-24 px-6">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl font-bold text-grayblue-100 mb-4">Publications</h2>
        <p class="text-grayblue-400 mb-8">Peer-reviewed work</p>

        <div class="space-y-4">
          {publications.map((pub) => (
            <div class="p-5 rounded-lg bg-white/[0.02] border border-white/[0.05] hover:bg-white/[0.04] transition-all duration-300">
              <h4 class="text-base font-medium text-grayblue-100 leading-relaxed">{pub.title}</h4>
              <p class="mt-2 text-sm text-grayblue-400">
                <span class="text-grayblue-300">{pub.venue}</span> · {pub.year}
              </p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Footer -->
    <footer class="py-12 px-6 border-t border-white/[0.06]">
      <div class="max-w-4xl mx-auto flex flex-col md:flex-row items-center justify-between gap-4">
        <p class="text-sm text-grayblue-500">
          © 2026 David Bouslov
        </p>
        <div class="flex items-center gap-6">
          <a href="https://github.com/dbouslov" target="_blank" rel="noopener noreferrer" class="text-grayblue-500 hover:text-grayblue-300 transition-colors">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
          </a>
          <a href="https://linkedin.com/in/davidbouslov" target="_blank" rel="noopener noreferrer" class="text-grayblue-500 hover:text-grayblue-300 transition-colors">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
          </a>
          <a href="https://twitter.com/davidbouslov" target="_blank" rel="noopener noreferrer" class="text-grayblue-500 hover:text-grayblue-300 transition-colors">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
          </a>
        </div>
      </div>
    </footer>
  </main>
</Layout>
