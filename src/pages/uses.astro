---
import Layout from '../layouts/Layout.astro';
import ParticleBackground from '../components/ParticleBackground.astro';
import Logo from '../components/Logo.astro';

const development = [
  { name: "Claude Code", description: "Primary development environment" },
  { name: "VS Code", description: "Code editor" },
  { name: "Git / GitHub", description: "Version control" },
  { name: "Python, TypeScript, Astro", description: "Core stack" },
];

const medical = [
  { name: "Anki + AnkiConnect", description: "Spaced repetition" },
  { name: "UWorld", description: "Board prep" },
];

const research = [
  { name: "Python (pandas, numpy)", description: "Data analysis" },
  { name: "R", description: "Statistics" },
  { name: "Google Colab", description: "Notebooks" },
];

const productivity = [
  { name: "Google Workspace", description: "Docs and collaboration" },
  { name: "Notion", description: "Notes and projects" },
  { name: "Custom CLI tools", description: "Daily planning with Claude Code" },
];
---

<Layout title="Uses - David Bouslov">
  <ParticleBackground />

  <!-- Navigation -->
  <nav class="fixed top-0 left-0 right-0 z-50 px-6 py-4 backdrop-blur-sm bg-black/20">
    <div class="max-w-4xl mx-auto flex items-center justify-between">
      <a href="/" class="text-grayblue-100 hover:text-white transition-colors">
        <Logo size={36} />
      </a>
      <div class="flex items-center gap-6 text-sm">
        <a href="/#about" class="text-grayblue-400 hover:text-grayblue-100 transition-colors">About</a>
        <a href="/#work" class="text-grayblue-400 hover:text-grayblue-100 transition-colors">Work</a>
        <a href="/#publications" class="text-grayblue-400 hover:text-grayblue-100 transition-colors">Publications</a>
        <a href="/now" class="text-grayblue-400 hover:text-grayblue-100 transition-colors">Now</a>
        <a href="/uses" class="text-grayblue-100 transition-colors">Uses</a>
      </div>
    </div>
  </nav>

  <main class="relative z-10 pt-24">
    <!-- Header -->
    <section class="py-16 px-6">
      <div class="max-w-4xl mx-auto">
        <h1 class="text-4xl md:text-5xl font-bold text-grayblue-100 mb-4">Uses</h1>
        <p class="text-xl text-grayblue-400">Software and workflows</p>
      </div>
    </section>

    <!-- Development Section -->
    <section class="py-8 px-6">
      <div class="max-w-4xl mx-auto">
        <div class="p-8 rounded-2xl bg-gradient-to-br from-grayblue-900/50 to-grayblue-800/30 border border-grayblue-700/30">
          <h2 class="text-xl font-semibold text-grayblue-100 mb-6">Development</h2>
          <div class="grid md:grid-cols-2 gap-4">
            {development.map((item) => (
              <div class="p-4 rounded-lg bg-white/[0.02] border border-white/[0.05]">
                <h3 class="text-grayblue-100 font-medium">{item.name}</h3>
                <p class="mt-1 text-sm text-grayblue-400">{item.description}</p>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Medical Education Section -->
    <section class="py-8 px-6">
      <div class="max-w-4xl mx-auto">
        <div class="p-8 rounded-2xl bg-gradient-to-br from-grayblue-900/50 to-grayblue-800/30 border border-grayblue-700/30">
          <h2 class="text-xl font-semibold text-grayblue-100 mb-6">Medical Education</h2>
          <div class="grid md:grid-cols-2 gap-4">
            {medical.map((item) => (
              <div class="p-4 rounded-lg bg-white/[0.02] border border-white/[0.05]">
                <h3 class="text-grayblue-100 font-medium">{item.name}</h3>
                <p class="mt-1 text-sm text-grayblue-400">{item.description}</p>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Research Section -->
    <section class="py-8 px-6">
      <div class="max-w-4xl mx-auto">
        <div class="p-8 rounded-2xl bg-gradient-to-br from-grayblue-900/50 to-grayblue-800/30 border border-grayblue-700/30">
          <h2 class="text-xl font-semibold text-grayblue-100 mb-6">Research</h2>
          <div class="grid md:grid-cols-3 gap-4">
            {research.map((item) => (
              <div class="p-4 rounded-lg bg-white/[0.02] border border-white/[0.05]">
                <h3 class="text-grayblue-100 font-medium">{item.name}</h3>
                <p class="mt-1 text-sm text-grayblue-400">{item.description}</p>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Productivity Section -->
    <section class="py-8 px-6 pb-24">
      <div class="max-w-4xl mx-auto">
        <div class="p-8 rounded-2xl bg-gradient-to-br from-grayblue-900/50 to-grayblue-800/30 border border-grayblue-700/30">
          <h2 class="text-xl font-semibold text-grayblue-100 mb-6">Productivity</h2>
          <div class="grid md:grid-cols-3 gap-4">
            {productivity.map((item) => (
              <div class="p-4 rounded-lg bg-white/[0.02] border border-white/[0.05]">
                <h3 class="text-grayblue-100 font-medium">{item.name}</h3>
                <p class="mt-1 text-sm text-grayblue-400">{item.description}</p>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Footer -->
    <footer class="py-12 px-6 border-t border-white/[0.06]">
      <div class="max-w-4xl mx-auto flex flex-col md:flex-row items-center justify-between gap-4">
        <div class="flex items-center gap-3 text-grayblue-500">
          <Logo size={28} />
          <span class="text-sm">Â© 2026</span>
        </div>
        <div class="flex items-center gap-6">
          <a href="https://github.com/dbouslov" target="_blank" rel="noopener noreferrer" class="text-grayblue-500 hover:text-grayblue-300 transition-colors">
