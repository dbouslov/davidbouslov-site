---
import '../styles/global.css';
import ScrollAnimations from '../components/ScrollAnimations.astro';
import CommandPalette from '../components/CommandPalette.astro';
import KeyboardNav from '../components/KeyboardNav.astro';
import CursorTrail from '../components/CursorTrail.astro';
import MagneticElements from '../components/MagneticElements.astro';
import TiltCards from '../components/TiltCards.astro';
import CopyEmail from '../components/CopyEmail.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="David Bouslov - Medical Student, Researcher, Builder" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="antialiased">
    <CursorTrail />
    <slot />
    <ScrollAnimations />
    <KeyboardNav />
    <CommandPalette />
    <MagneticElements />
    <TiltCards />
    <CopyEmail />
  </body>
</html>
